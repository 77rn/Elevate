<%- include('./partials/header') %>

<div class="w-full min-h-screen flex items-center justify-center bg-gray-50 py-12 px-6">
  <div class="w-full max-w-3xl bg-white rounded-2xl shadow-xl p-10 relative">
    
    <div class="flex flex-col items-center">
      <label for="picture" class="relative cursor-pointer">
        <img 
          src="<%= user.picture || 'https://cdn.pixabay.com/photo/2016/08/08/09/17/avatar-1577909_960_720.png' %>" 
          alt="Profile Picture" 
          class="w-32 h-32 rounded-full object-cover border shadow-md hover:opacity-80 transition-opacity"
        />
    </div>

    <form action="/account/profile/<%= user._id %>" method="POST" enctype="multipart/form-data" class="mt-6 space-y-6">
      <div>
        <label for="fullname" class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
        <input
          type="text"
          id="fullname"
          name="fullname"
          value="<%= user.fullname || '' %>"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-black transition-colors"
          required
        />
      </div>

      <div>
        <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
        <input
          type="email"
          id="email"
          name="email"
          value="<%= user.email || '' %>"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-black transition-colors"
          required
        />
      </div>


      <div>
        <label for="contact" class="block text-sm font-medium text-gray-700 mb-1">Contact</label>
        <input
          type="number"
          id="contact"
          name="contact"
          value="<%= user.contact || '' %>"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-black transition-colors"
        />
      </div>


      <div>
        <button
          type="submit"
          class="w-full bg-black text-white px-5 py-3 rounded-lg hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-gray-700 transition-all"
        >
          Save Changes
        </button>
      </div>
    </form>
  </div>
</div>

<%- include('./partials/footer') %>
